//Rock, Paper, Scissors - Game Mechanics
const rock = 'rock';
const paper = 'paper';
const scissors = 'scissors';

function computerPlay() {
  let randomNumber = Math.floor(Math.random() * 3);
  if (randomNumber == 0) {
    return rock
  }
  if (randomNumber == 1) {
    return paper
  }
  if (randomNumber == 2) {
    return scissors
  }
}

let counter = 0;

function playRound(playerSelection, computerSelection) {

// tie
if (playerSelection == computerSelection) {
    return "It's a Tie"
    }
// Player selects rock
if (playerSelection == rock && computerSelection == paper) {
    counter--;
    return "You Lose! Paper beats Rock"
  }
  if (playerSelection == rock && computerSelection == scissors) {
    counter++;
    return "You Win! Rock beats Scissors"
  }

// Player selects paper
  if (playerSelection == paper && computerSelection == scissors) {
    counter--;
    return "You Lose! Scissors beat Paper"
  }
  if (playerSelection == paper && computerSelection == rock) {
    counter++;
    return "You Win! Paper beats Rock"
  }
// Player selects scissors
if (playerSelection == scissors && computerSelection == paper) {
    counter++;
    return "You Win! Scissors beat Paper"
  }
  if (playerSelection == scissors && computerSelection == rock) {
    counter--;
    return "You Lose! Rock beats Scissors"
  } else {
    return "You are not playing by the Rules! Please choose from the three options"
  }
}

//game function
function game() {
let i = 1;
do {
  const computerSelection = computerPlay();
  const userInput = prompt(`Round ${i}: Rock, Paper or Scissors?`).toLowerCase();
  playRound(userInput, computerSelection);
  console.log(`Round ${i}: ${playRound(userInput, computerSelection)}`);
  i += 1;
} while (i<6);
if (counter>0) {
return "Congrats! You win!"
} if (counter<0) {
return "You lost. Try again!"
} else {
return "Wow! It's a Tie. Try Again?"
}
}
//console.log(game());

// event listener - button clicks
document.getElementById("Rock").addEventListener("click", playRound('rock', computerPlay()));


//JSCSS
//random Subtitle
const subtitles = ["Make your choice!", "What's your choice going to be?", "Pick one of the three options!", "Click on one of the symbols below!"];
const randomSubtitle = () => {
  let randomNumber = Math.floor(Math.random()*4);
  return subtitles[randomNumber];
};

document.getElementById('subtitle').innerHTML = randomSubtitle();
